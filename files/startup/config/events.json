{
  "events":[
    {
      "when": "always",
      "action": "pwm_set_dc",
      "arguments": [1,20],
    },
    {
      "when": "always",
      "action": "pwm_set_period",
      "arguments": [1,1],
    },
    {      
      "when": "temp_less_than",
      "eval_value": 1,
      "action": "pwm_on",
      "arguments": [1],   
    },
    {      
      "when": "temp_less_than",
      "eval_value": 1,
      "action": "print",
      "arguments": ["Hello world!","pippo"],   
    }
  ],
  "check_delay": 3000
}